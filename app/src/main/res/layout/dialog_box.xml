<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_back"
         android:orientation="vertical">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/map_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Loc_Name"
            android:text="کافی شاپ بوستان"
            android:fontFamily="@font/IRANSans"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Loc_Address"
            android:text=" بوستان بعد از دبستان خیابان اول پلاک 222"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/IRANSans"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Loc_Tel"
            android:text="09163154507"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/IRANSans"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="68dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/diamond" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Diamond"
            android:text="5 الماس باقی مانده است"
            android:layout_gravity="center"
            android:fontFamily="@font/IRANSans"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</RelativeLayout>
